<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.cell.PropertyValueFactory?>

<TabPane tabClosingPolicy="UNAVAILABLE" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.TravelShipController">
    <tabs>
        <Tab text="Overview">
            <content>
                <GridPane alignment="center" hgap="10" vgap="10">
                    <children>

                        <Label text="Company: " GridPane.columnIndex="0" GridPane.rowIndex="0" />
                        <Label fx:id="companyLabel" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                        <Label text="Passengers: " GridPane.columnIndex="0" GridPane.rowIndex="1" />
                        <Label fx:id="travelShipValueLabel" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                        <Label text="Current position: " GridPane.columnIndex="0" GridPane.rowIndex="2" />
                        <Label fx:id="currentPositionLabel" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                        <Label text="ID: " GridPane.columnIndex="0" GridPane.rowIndex="3" />
                        <Label fx:id="IDLabel" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                        <Label text="Current destination: " GridPane.columnIndex="0" GridPane.rowIndex="4" />
                        <Label fx:id="currentDestinationLabel" GridPane.columnIndex="1" GridPane.rowIndex="4" />

                        <Label text="Route: " GridPane.columnIndex="0" GridPane.rowIndex="5" />
                        <Label fx:id="routeLabel" GridPane.columnIndex="1" GridPane.rowIndex="5" />

                        <Button text="Report Issue" GridPane.columnIndex="1" GridPane.rowIndex="6" onAction="#reportIssue" />
                        <Button text="Remove vehicle" GridPane.columnIndex="1" GridPane.rowIndex="7" onAction="#removeTravelShip" />
                    </children>
                </GridPane>
            </content>
        </Tab>
        <Tab text="Passengers">
            <content>
                <TableView fx:id="tableView" >
                    <columns>
                        <TableColumn text="Imię">
                            <cellValueFactory>
                                <PropertyValueFactory property="name" />
                            </cellValueFactory>
                        </TableColumn>

                        <TableColumn text="Nazwisko">
                            <cellValueFactory>
                                <PropertyValueFactory property="surname" />
                            </cellValueFactory>
                        </TableColumn>

                        <TableColumn text="Wiek">
                            <cellValueFactory>
                                <PropertyValueFactory property="age" />
                            </cellValueFactory>
                        </TableColumn>

                        <TableColumn text="PESEL">
                            <cellValueFactory>
                                <PropertyValueFactory property="PESEL" />
                            </cellValueFactory>
                        </TableColumn>

                        <TableColumn text="Trasa - poprzednia pozycja">
                            <cellValueFactory>
                                <PropertyValueFactory property="currentPosition" />
                            </cellValueFactory>
                        </TableColumn>

                        <TableColumn text="Trasa - obecny cel">
                            <cellValueFactory>
                                <PropertyValueFactory property="currentDestination" />
                            </cellValueFactory>
                        </TableColumn>

                        <TableColumn text="Typ podróży">
                        </TableColumn>
                    </columns>
                </TableView>
            </content>
        </Tab>
    </tabs>
</TabPane>
