<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<TabPane tabClosingPolicy="UNAVAILABLE" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.AircraftCarrierController">
    <tabs>
        <Tab text="Overview">
            <content>
                <GridPane alignment="center" hgap="10" vgap="10">
                    <children>

                        <Label text="Typ amunicji: " GridPane.columnIndex="0" GridPane.rowIndex="0" />
                        <Label fx:id="ammoTypeLabel" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                        <Label text="Current position: " GridPane.columnIndex="0" GridPane.rowIndex="2" />
                        <Label fx:id="currentPositionLabel" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                        <Label text="ID: " GridPane.columnIndex="0" GridPane.rowIndex="3" />
                        <Label fx:id="IDLabel" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                        <Button text="Report Issue" GridPane.columnIndex="1" GridPane.rowIndex="6" onAction="#reportIssue" />
                        <Button text="Remove Plane" GridPane.columnIndex="1" GridPane.rowIndex="7" onAction="#removeAircraftCarrier" />
                    </children>
                </GridPane>
            </content>
        </Tab>
    </tabs>
</TabPane>
